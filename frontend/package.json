{
  "name": "qr-generator-electron",
  "version": "2.0.0",
  "description": "Generador de QR dinámico con Electron + React para laboratorio informática",
  "main": "public/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "env-cmd -f ../.env.dev next dev -p 3020 -H 0.0.0.0",
    "dev:electron": "wait-on http://localhost:3020 && electron .",
    "dev:prod-api": "env-cmd -f ../.env.prod-api next dev -p 3020 -H 0.0.0.0",
    "dev:web-prod-api": "concurrently \"npm run dev:prod-api\" \"npm run dev:electron\"",
    "build": "next build",
    "build:prod": "env-cmd -f ../.env.prod next build",
    "build:electron": "npm run build && electron-builder",
    "start": "next start",
    "start:prod": "env-cmd -f ../.env.prod next start",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "qr",
    "generator",
    "electron",
    "nextjs",
    "laboratorio"
  ],
  "author": "UAI Lab Informatica",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "env-cmd": "^10.1.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "axios": "^1.11.0",
    "dotenv": "^16.3.1",
    "next": "^13.5.6",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-qr-code": "^2.0.12",
    "tailwindcss": "^3.3.5"
  },
  "build": {
    "appId": "com.uai.qr-generator",
    "productName": "QR Generator Lab",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "public/main.js",
      "public/preload.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  }
}
