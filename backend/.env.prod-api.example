# Backend Production API Environment (when used with production API from frontend dev)
# Base de datos MySQL (producción)
MYSQL_HOST=your_production_mysql_host
MYSQL_USER=root
MYSQL_PASSWORD=your_production_mysql_password_here
MYSQL_DB=registro_qr
MYSQL_PORT=3306

# Configuración del servidor
PORT=3001
NODE_ENV=production

# Seguridad
API_SECRET=your_production_api_secret_here

# CORS Origins para desarrollo con API de producción
CORS_ORIGINS=http://localhost:3020,http://127.0.0.1:3020,https://your-domain.com

# ESPHome Configuration (Door Control)
ESPHOME_URL=http://your_production_esphome_device_ip:6052
ESPHOME_TOKEN=your_production_esphome_api_token
ESPHOME_DOOR_ENTITY_ID=button.door_open